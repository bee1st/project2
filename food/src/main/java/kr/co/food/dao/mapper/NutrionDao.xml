<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybats-3-mapper.dtd">

<mapper namespace="kr.co.food.dao.NutrionDao">
 <select id="n_view" resultType="kr.co.food.dto.NutrionDto">
 	select * from food where food_code=#{param1}
 </select>
<select id="list" resultType="kr.co.food.dto.NutrionDto">
  <!--select * from board order by id desc  -->
  <!-- 페이징처리 한 list --> 
  select * from food order by food_code desc limit #{param},10;
 </select>
 <select id="get_record_cnt" resultType="Integer">
  select count(*) from food
 </select>
 <select id="get_page_cnt" resultType="Integer">
  select ceil(count(*)/10) from food
 </select>
 
 <!-- 검색부분 -->
 <select id="slist" resultType="kr.co.food.dto.NutrionDto">
  select * from food where ${param1} like concat('%',#{param2},'%') order by food_code desc limit #{param3},20;
 </select>
</mapper>